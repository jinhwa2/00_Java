package com.kh.oop.method.ex;

public class PizzaStore {
 //필드
	private String pizzaName;  //피자이름
	private int pizzaPrice;  //피자가격
//메서드 
	//Setter
	public void setPizaaName(String pizzaName) {
		this.pizzaName = pizzaName;
	}
	public void setPizzaPrice(int pizzaPrice) {
		this.pizzaPrice = pizzaPrice;
	}
	//Getter
	public String getPizaaName() {
		return pizzaName;
	}
	public int getPizzaPrice() {
		return pizzaPrice;
	}
//메서드 생성자 :기본
	public PizzaStore() {
		
	}
//메서드 생성자 : 필수
	public PizzaStore(String pizzaName, int pizzaPrice) {
		this.pizzaName = pizzaName;
		this.pizzaPrice = pizzaPrice;
	}
//메서드 : void
	public void inforPizza() {
		System.out.println("피자이름 :" +pizzaName);
		System.out.println("피자가격 :" +pizzaPrice);
	}
	
//메인 메서드
	public static void main(String[] args) {
		//피자 객체
		PizzaStore  피자1 = new PizzaStore ();
		피자1.setPizaaName("불고기피자");
		피자1.setPizzaPrice(20000);
		피자1.inforPizza();
		System.out.println("----------------------");
		
		PizzaStore 피자2 = new PizzaStore();
		피자2.setPizaaName("고구마피자");
		피자2.inforPizza();
		System.out.println("----------------------");
		
		PizzaStore 피자3 = new PizzaStore("감자피자", 50000);
		피자3.inforPizza();
	}
}
