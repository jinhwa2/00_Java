package sup1.model;

public class Score {
//필드
	public int korean;
	public int english;
	public int math;
	public int total;
	public double avg;
	
	
//메서드
	//필수 생성자
	public Score(int korean,int english,int math,int total,double avg) {
		this.korean = korean;
		this.english = english; 
		this.math = math;
		this.total = total;
		this.avg = avg;
	}
	
	//void
	public void 결과(int 결과) {
		total = korean + english + math;
		avg = total / 3.0;
		boolean 합격 = true;
		boolean 불합격 = false;
		if(avg>=50 ? 합격: 불합격) {
			System.out.println(합격);
		}
		
		//평균 50점 이상이면 합격
		//삼항연산자로 합격 불합격
		// 각 점수가 50 이상 평균 50점 이상
		//출력문으로 국어영어 수학점수랑
		//삼항연산자에 대한 결가 출력
	}
}
